@model List<PedidoModel>

<main>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-12 d-flex justify-content-between">
                        <h4>Lista de Pedidos</h4>
                        <a asp-controller="Pedido" asp-action="CriarPedido" class="btn btn-padrao">
                            Adicionar novo Pedido
                        </a>
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Número do Pedido</th>
                            <th>Data da Solicitacao</th>
                            <th>Data Prevista Entrega</th>
                            <th colspan="3">Observação</th>
                        </tr>
                    </thead>
                    <tbody id="itensTable">
                        @{
                            foreach (PedidoModel pedido in Model)
                            {
                                <tr>
                                    <td>@pedido.NumeroDoPedido</td>
                                    <td>@pedido.DataDaSolicitacao.ToString("dd/MM/yyyy")</td>
                                    <td>@pedido.DataPrevistaEntrega.ToString("dd/MM/yyyy")</td>
                                    <td>@pedido.Observacao</td>
                                    <td><a asp-controller="Pedido" asp-action="DetalhesPedido" asp-route-NumeroDoPedido="@pedido.NumeroDoPedido" class="btn btn-padrao btn-sm">Ver</a></td>
                                    <td><a asp-controller="Pedido" asp-action="RemoverPedido" asp-route-NumeroDoPedido="@pedido.NumeroDoPedido" class="btn btn-danger btn-sm">Remover</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>