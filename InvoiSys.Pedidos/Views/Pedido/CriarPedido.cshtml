@model PedidoModel

<main>
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <h3>Adicionar Pedido</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <form asp-controller="Pedido" asp-action="CriarPedido" method="post" id="form-pedidos">
                        <div class="row">
                            <div class="col-4">
                                <div class="mb-3">
                                    <label for="numeroDoPedido" class="form-label">Número do Pedido <strong class="text-danger">*</strong></label>
                                    <input asp-for="NumeroDoPedido" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="mb-3">
                                    <label for="DataDaSolicitacao" class="form-label">Data da Solicitação <strong class="text-danger">*</strong></label>
                                    <input asp-for="DataDaSolicitacao" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="mb-3">
                                    <label for="DataPrevistaEntrega" class="form-label">Data Prevista para Entrega <strong class="text-danger">*</strong></label>
                                    <input asp-for="DataPrevistaEntrega" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label for="Observacao" class="form-label">Observação</label>
                                <textarea asp-for="Observacao" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="col-12 d-flex d-flex justify-content-between">
                            <div class="mt-3">
                                <a asp-controller="Pedido" asp-action="Pedidos" class="btn btn-padrao btn-sm">Voltar para Pedidos</a>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-padrao btn-sm">Adicionar Pedido</button>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-12">
                                <h5>Itens do Pedido</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="mb-3">
                                    <label for="CodigoDoProduto" class="form-label">Código do Produto</label>
                                    <input type="number" id="CodigoDoProduto" name="CodigoDoProduto" class="form-control" />
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="mb-3">
                                    <label for="Quantidade" class="form-label">Quantidade</label>
                                    <input type="number" id="Quantidade" name="Quantidade" class="form-control" />
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="mb-3">
                                    <label for="DescricaoDoProduto" class="form-label">Descrição do Produto</label>
                                    <input type="text" id="DescricaoDoProduto" name="DescricaoDoProduto" class="form-control" />
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="mb-3">
                                    <label for="ValorDoProduto" class="form-label">Valor do Produto</label>
                                    <input type="text" id="ValorDoProduto" name="ValorDoProduto" class="form-control" />
                                </div>
                            </div>
                            <div class="col-1 align-content-center">
                                <div class="mt-3">
                                    <button type="button" class="btn btn-padrao btn-sm" id="adicionarItens">Adicionar</button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Código do Produto</th>
                                            <th>Quantidade</th>
                                            <th>Descrição do Produto</th>
                                            <th>Valor do Produto</th>
                                            <th>Ação</th>
                                        </tr>
                                    </thead>
                                    <tbody id="itensTable">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="~/js/CriarPedido.js"></script>